<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F1E8"
    tools:context="com.example.karayek.ui.sell_khobre_webView.Sell_whith_Khobre">

    <include
        android:id="@+id/include3"
        layout="@layout/layout_toolbar_sell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_input_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/beck_ed_text"
        android:hint="نام و نام خانوادگی"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText
        android:id="@+id/ed_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/beck_ed_text"
        android:hint="شماره همراه"
        android:inputType="number"
        android:maxLength="11"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintEnd_toEndOf="@+id/ed_input_name"
        app:layout_constraintStart_toStartOf="@+id/ed_input_name"
        app:layout_constraintTop_toBottomOf="@+id/ed_input_name"
        app:layout_constraintVertical_bias="0.041" />

    <EditText
        android:id="@+id/ed_input_person_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/beck_ed_text"
        android:hint="کد ملی"
        android:inputType="number"
        android:padding="10dp"
        android:maxLength="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_phone_number"
        app:layout_constraintStart_toStartOf="@+id/ed_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/ed_phone_number"
        app:layout_constraintVertical_bias="0.0500000" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_button"
        android:text="@string/next"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_input_person_id"
        app:layout_constraintVertical_bias="0.16000003" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_daryaft_ettelaat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_buy"
        app:layout_constraintVertical_bias="0.7" />


</androidx.constraintlayout.widget.ConstraintLayout>